                                </select>
                                <div class="show-offer-div rounded  p-3 mt-1" style="display: none;"></div>
                                <span id="plus-spanBtn-offer" class="show-offer-span bg-yellow-500 px-3 py-2 rounded-full cursor-pointer float-right" style="display: none;"><strong>Add More</strong></span>
                                <div id="more-offer-div"></div>
                                <span id="btn" class="offer offer-sub-btn my-2 h-10 rounded text-black font-bold hover:text-white bg-green-500 px-3 py-2 cursor-pointer" style="display: none;margin-left: 42%;" type="submit">
                                    Update
                                </span>

                            </div>
                        </form>

                        <form action="/seller/updateitem/<%= product._id %>" method="POST">
