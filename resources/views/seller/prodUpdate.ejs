<section class="item-details-Images flex justify-center">
    <div class="shower-main-container w-8/12 flex flex-col justify-center border-2 rounded bg-gray-300 mt-20 pt-10 px-5 mx-auto">
        <div class="mx-auto">
            <span class="font-bold py-3 px-3 bg-gray-800 rounded text-green-400">Product Images</span>
        </div>
        <div class="item-images-shower grid grid-cols-3 gap-10 mx-auto py-10">
            <% for (const img of product.image) { %>
                <div>
                    <a href="/uploadedImages/<%= img.img %>">
                        <img class="rounded" src="../../../uploadedImages/<%= img.img %>" alt="item image"
                            style="height: 13rem;">
                    </a>
                    <button id="<%= product._id %>" value="<%= img._id %>" data-item="<%= JSON.stringify(imageSet) %>" class="delete-item-btn changedprice-btn h-10 ml-24 mt-5 rounded text-black bg-green-500 font px-5 rounded focus:outline-none mx-auto" type="submit">
                        Delete
                    </button>
                </div>
                <% } %>
        </div>
    </div>
    <div class="upload-more-img mt-20 border-2 w-96 h-52 p-5 bg-gray-800">
        <form action="/product-add-img/<%= product._id %>" method="POST" enctype="multipart/form-data">
            <span class="font-bold text-white">Upload more Images:</span><br><br>
            <input name="image" multiple class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none" id="username" type="file" accept=".jpg, .jpeg, .png" required>
            <button class="changedprice-btn h-10 mt-2 ml-20 rounded text-black bg-green-500 font px-1 rounded focus:outline-none" type="submit">
                Upload
            </button>
        </form>
    </div>
</section>

<script>
    let deletePrdDiv = document.getElementsByClassName('delete-prd-div')[0];
    deletePrdDiv.addEventListener('click', () => {
        let result = confirm('Are you sure you want to delete this Store?');
        // console.log(result);
        if (result) {
            deletePrdForm = document.getElementsByClassName('delete-prd-form')[0];
            deletePrdForm.submit();
        }
    })
</script>