                    <div id="form2_1" class="form2_1">

                        <form action="/seller/updateitem/<%= product._id %>" method="POST">
                            <div class="mb-4 bg-gray-400">
                                <label class="inline-block text-white text-sm font-bold" for="offer">
                                    Offers:
                                </label>
