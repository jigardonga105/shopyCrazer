                                <div id="more-color-div"></div>
                                <span id="btn" class="color color-sub-btn my-2 h-10 rounded text-black font-bold hover:text-white bg-green-500 px-3 py-2 cursor-pointer" style="display: none;margin-left: 42%;" type="submit">
                                    Update
                                </span>
                            </div>
                        </form>

                        <form action="/seller/updateitem/<%= product._id %>" method="POST">
                            <div class="mb-4 bg-gray-400">
                                <label class="inline-block text-white text-sm font-bold" for="payops">
                                    Payment Options:
                                </label>
                                <select name="payops" id="payops" class="select shadow border rounded w-full mt-2 py-2 px-3 text-gray-700 leading-tight focus:outline-none">
                                    <option disabled selected class="bg-black text-white">Select a Option
                                    </option>
                                    <option value="ext" class="bg-black text-white">Update Existing</option>
