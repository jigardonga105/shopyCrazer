<head>
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/bootstrap.min.css">

    <style>
        @media screen and (max-width: 630px) {
            body {
                width: 630px;
            }
        }
        
        strong {
            font-size: 20px;
            font-weight: 600;
        }
        
        li strong {
            font-weight: 400;
        }
    </style>
</head>

<% if(product) { %>

    <div class="change-details-btn-div float-right relative right-24 top-5">
        <a href="/seller/productUpdate/<%= product._id %>">
            <button class="h-10 rounded text-black bg-green-500 px-3 rounded focus:outline-none">
                Update
            </button>
        </a>
    </div>

    <section class="item-details grid grid-cols-3 grid-center justify-center gap-20 py-20">
        <div class="item-img" style="width: 574px;">
            <% for (const img of product.image) { %>
                <img class="itemSlider" src="../../../uploadedImages/<%= img.img %>" alt="">
                <% } %>
        </div>

        <div class="item-data col-span-2 grid grid-cols-2" style="margin-left: 11rem;">

            <div class="item-data-1 mr-1">
                <span class="bg-gray-300 rounded mb-5 p-2 text-lg block"><strong>Category:</strong>
                    <%= product.category %> &#8658; <%= product.subcategory %>
                </span>
                <span class="bg-gray-300 rounded mb-5 p-2 text-lg flex">
                    <span>
                        <strong>Product Rating:</strong>
                        <%= product.rating %>&nbsp;
                    </span>
                <span>
                        <img class="mt-1" src="/img/star.png" alt="" height="20" width="20">
                    </span>
                </span>
                <span class="bg-gray-300 rounded mb-5 p-2 text-lg block"><strong>Product Name:</strong>
                    <%= product.name %>
                </span>
            </div>

            <div class="item-data-2 ml-1">
                <span class="bg-gray-300 rounded mb-5 p-2 text-lg block"><strong>In Stock:</strong>
                    <% if(product.stock == true){ %>
                        <span>✅</span>
                <% } else { %>
                    <span>❌</span>
                    <% } %>
                        </span>
                        <span class="bg-gray-300 rounded mb-5 p-2 text-lg block"><strong>Product Vote:</strong>
                    <%= product.vote %>
                </span>
                        <span class="bg-gray-300 rounded mb-5 p-2 text-lg block"><strong>Product Price:</strong>
                    ₹<%= product.price %>
                </span>
            </div>

            <div class="bg-gray-300 col-span-2">
                <strong class="ml-2">Available offers:</strong>
                <ul class="my-2 list-disc">
                    <% for(let i = 0; i < Object.keys(product.offer[0]).length; i++){ 
                    let offer = product.offer[0][i]; %>
                        <% for (key in offer) { %>
                            <li class="mb-1"><strong><%= key %>:&nbsp;</strong>
                                <%= offer[key] %>
                            </li>
                            <% } %>
                                <% } %>
                </ul>
            </div>

            <% if(product.size.length) { %>
                <div class="bg-gray-300 col-span-2 mt-5 p-2">
                    <strong>Sizes:</strong>
                    <% product.size.map(size => { %>
                        <div class="size-show-div inline-block w-10 h-10 mt-2 mr-2">
                            <%= size %>
                        </div>
                        <% }) %>
                </div>
                <% } %>

                    <% if(product.color) { %>
                        <div class="bg-gray-300 col-span-2 mt-5 p-2">
                            <strong>Colors:</strong>
                            <% product.color.map(color => { %>
                                <div class="color-show-div inline-block w-10 h-10 rounded-full mt-2 mr-2" data-color="<%= color %>"></div>

                                <script>
                                    color_show_div = document.getElementsByClassName('color-show-div');
                                    for (var i = 0; i < color_show_div.length; i++) {
                                        if (color_show_div[i]) {
                                            let color = color_show_div[i].dataset.color
                                            color_show_div[i].style.background = color;
                                        }
                                    }
                                </script>

                                <% }) %>
                        </div>
                        <% } %>

                            <div class="bg-gray-300 col-span-2 mt-5">
                                <strong class="ml-1">Warranty:</strong>
                                <ul class="my-2 list-disc">
                                    <% for(let i = 0; i < Object.keys(product.Warr_Garr[0]).length; i++){ 
                                        let Warr_Garr = product.Warr_Garr[0][i]; %>
                                        <% for (key in Warr_Garr) { %>
                                            <li class="my-1">
                                                <%= Warr_Garr[key] %>
                                            </li>
                                            <% } %>
                                                <% } %>
                                </ul>
                            </div>

                            <% if(product.highlight.length) { %>
                                <div class="bg-gray-300 col-span-2 mt-5 p-2">
                                    <strong>Highlights:</strong>
                                    <ul class="my-2 list-disc">
                                        <% product.highlight.map(highlight => { %>
                                            <li class="my-1">
                                                <%= highlight %>
                                            </li>
                                            <% }) %>
                                    </ul>
                                </div>
                                <% } %>

                                    <% if(product.payment_ops.length) { %>
                                        <div class="bg-gray-300 col-span-2 mt-5 p-2">
                                            <strong>Payment Options:</strong>
                                            <ul class="my-2 list-disc">
                                                <% product.payment_ops.map(payment_ops => { %>
                                                    <li class="my-1">
                                                        <%= payment_ops %>
                                                    </li>
                                                    <% }) %>
                                            </ul>
                                        </div>
                                        <% } %>

                                            <% if(product.service.length) { %>
                                                <div class="bg-gray-300 col-span-2 mt-5 p-2">
                                                    <strong>Services:</strong>
                                                    <ul class="my-2 list-disc">
                                                        <% product.service.map(service => { %>
                                                            <li class="my-1">
                                                                <%= service %>
                                                            </li>
                                                            <% }) %>
                                                    </ul>
                                                </div>
                                                <% } %>

                                                    <div class="col-span-2 bg-gray-300 rounded mt-5 p-2 text-lg">
                                                        <strong class="pt-2">Description:</strong>
                                                        <br>
                                                        <span><%= product.desc %></span>
                                                    </div>

                                                    <div class="bg-gray-300 col-span-2 mt-5 p-2">
                                                        <strong>Specifications:</strong>
                                                        <ul class="my-2 list-disc">
                                                            <% let specification = product.specification[0]; %>
                                                                <% for (key in specification) { %>
                                                                    <li class="mb-3"><strong><%= key %>:&nbsp;</strong>
                                                                        <% let spec = specification[key]%>
                                                                            <ul>
                                                                                <% for (keySpec in spec) { %>
                                                                                    <li class="mb-1"><strong><%= keySpec %>:&nbsp;</strong>
                                                                                        <%= spec[keySpec] %>
                                                                                    </li>
                                                                                    <% } %>
                                                                            </ul>
                                                                    </li>
                                                                    <% } %>
                                                        </ul>
                                                    </div>
        </div>
    </section>

    <% } %>

        <script>
            var itemIndex = 0;
            itemSlider();

            function itemSlider() {
                var index;
                var x = document.getElementsByClassName("itemSlider");
                for (index = 0; index < x.length; index++) {
                    x[index].style.display = "none";
                }
                itemIndex++;
                if (itemIndex > x.length) {
                    itemIndex = 1
                }
                x[itemIndex - 1].style.display = "block";
                setTimeout(itemSlider, 5000); // Change image every 2 seconds
            }
        </script>