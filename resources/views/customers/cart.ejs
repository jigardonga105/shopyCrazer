<head>
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/bootstrap.min.css">

    <style>
        #emptyCartDiv {
            width: 75rem;
        }

        .mx {
            margin: 0rem 31.5rem;
        }

        #emptyCartBtn:hover {
            transition: all 1s ease-in-out;
            transform: scale(0.9);
        }

        .cartPlusMin {
            background: rgb(231, 226, 226);
            font-size: 15px;
        }

        .text-12 span {
            font-size: 12px !important;
            font-weight: bold;
        }

        .text-12 li {
            font-size: 12px !important;
            font-weight: 500 !important;
            color: black;
        }

        .cartRightButton:hover {
            color: white;
            background: rgb(255, 124, 17);
            transition: all 1s ease-in-out;
            transform: scale(0.9);
        }

        .cartItemRemBtn:hover {
            transition: all 1s ease-in-out;
            transform: scale(0.9);
        }

        .cartItemOnlyBtn:hover {
            transition: all 1s ease-in-out;
            transform: scale(0.9);
        }
    </style>


    <style>
        @media screen and (max-width: 1268px) {
            .cartSinglePrdMain {
                display: grid;
                grid-template-columns: repeat(6, 1fr);
                grid-template-rows: repeat(2, 1fr);
                grid-column-gap: 0px;
                grid-row-gap: 0px;
            }

            .cartSinglePrdImg {
                grid-area: 1 / 1 / 2 / 2;
            }

            .cartSinglePrdInfo {
                grid-area: 1 / 2 / 2 / 7;
            }

            .cartSinglePrdFeat {
                grid-area: 2 / 2 / 3 / 7;
                width: 50%;
                display: flex;
                flex-direction: column;
                justify-self: end;
                margin-top: 25px;
            }

            .cartSinglePrdRemBuNowMain {
                justify-content: start !important;
            }
        }

        .cartSingleCounter {
            width: 112px !important;
        }

        @media screen and (max-width: 1180px) {
            .conShopPlcOrdMain {
                flex-direction: column;
                column-gap: 0rem !important;
                row-gap: 1rem;
            }
        }

        @media screen and (max-width: 1000px) {
            .cartSingleAllPrdPriceCalc {
                display: flex;
                flex-direction: column-reverse;
            }

            .cartSinglePriceCalc {
                max-width: 50%;
                margin: auto 25%;
            }

            .conShopPlcOrdMain {
                margin-top: 1.5rem;
                flex-direction: row;
                column-gap: 1rem !important;
                row-gap: 0rem;
            }
        }

        @media screen and (max-width: 870px) {
            .cartSinglePrdFeat {
                width: 75%;
            }
        }

        @media screen and (max-width: 810px) {
            .cartSinglePriceCalc {
                width: 100% !important;
                max-width: 100%;
                margin: auto !important;
            }
        }

        @media screen and (max-width: 650px) {
            #cartAvailability {
                padding: 2rem 1rem !important;
            }
        }

        @media screen and (max-width: 560px) {
            .cartSinglePrdFeat {
                width: 100%;
            }

            .cartSinglePrdMain {
                display: grid;
                grid-template-columns: repeat(6, 1fr);
                grid-template-rows: repeat(3, 1fr);
            }

            .cartSinglePrdImg {
                grid-area: 1 / 3 / 2 / 5;
            }

            .cartSinglePrdInfo {
                grid-area: 2 / 1 / 3 / 7;
            }

            .cartSinglePrdFeat {
                grid-area: 3 / 1 / 4 / 7;
            }
        }

        @media screen and (max-width: 400px) {
            .cartSinglePriceCalc span,
            .cartSinglePriceCalc button {
                font-size: 15px;
            }
        }
    </style>
</head>

<section>
    <% if(user){ %>
        <!-- if cart is awailable and product is awailable then show that product -->
        <% if(user.cart && user.cart['custID_' + user._id + '_cart' ] && Object.keys(user.cart['custID_' + user._id
            + '_cart' ].items).length){ %>
            <input type="hidden" id="cartData" value="<%= JSON.stringify(user.cart) %>"
                data-user="<%= JSON.stringify(user) %>">
            <input type="hidden" id="prdData" value="<%= JSON.stringify(cartProduct) %>">
            <input type="hidden" id="strNameArr" value="<%= JSON.stringify(strNameArr) %>">

            <div id="cartAvailability" class="bg-gray-100 p-20">
                <div class="cartSingleAllPrdPriceCalc grid grid-cols-3 gap-3">
                    <!-- Left side -->
                    <div class="cartSingleAllPrd bg-white shadow col-span-2">
                        <div class="p-3">
                            <h4 id="itemLength" class="inline-block"></h4>
                            <div class="allCartProduct" id="allCartProduct"></div>
                        </div>
                    </div>

                    <!-- Right Side -->
                    <div class="cartSinglePriceCalc">
                        <div id="cartRightDiv" class="bg-white shadow"></div>
                        <div class="conShopPlcOrdMain flex justify-content-center gap-x-5 mt-14">
                            <a href="/shop">
                                <button
                                    class="cartRightButton bg-yellow-300 text-black p-3 rounded focus:outline-none">Continue
                                    Shopping</button>
                            </a>
                            <a href="/placeOrder">
                                <button id="placeOrderBtn"
                                    class="cartRightButton bg-yellow-300 text-black p-3 rounded focus:outline-none">Place
                                    Order</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }else{ %>
                <div class="bg-gray-100 p-20">
                    <div id="emptyCartDiv" class="bg-white m-auto p-2">
                        <div class="p-3">
                            <h4>My Cart</h4>
                        </div>
                        <div class="p-3">
                            <img class="w-58 h-48 m-auto" src="/img/cart.png" alt="emptyCart">
                        </div>
                        <div class="mx">
                            <span class="block font-bold text-xl m-auto">Your cart is empty!</span>
                            <span class="block text-base mx-3 my-3">Add items to it now.</span>
                            <a href="/">
                                <button id="emptyCartBtn"
                                    class="bg-green-600 shadow text-white w-44 h-10 rounded mb-10">
                                    Shop Now
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
                <% } %>
                    <% } %>
</section>